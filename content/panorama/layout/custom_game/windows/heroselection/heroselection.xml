<root>
    <styles>
        <include src="file://{resources}/styles/windows/basic_window.css"/>
        <include src="file://{resources}/styles/windows/heroselection_window.css"/>
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/windows/heroselection.js"/>
    </scripts>
    <Panel class="Root HeroSelection" hittest="false">
        <DOTAScenePanel id="HeroSelectionScreen" onload="OnHeroSelectionScreenLoaded()" antialias="true" renderdeferred="false" map="hero_selection" particleonly="false" light="global_light" camera=""/>
        <Panel id="Spinner" class="lds-default">
            <Panel class="dot1"/>
            <Panel class="dot2"/>
            <Panel class="dot3"/>
            <Panel class="dot4"/>
            <Panel class="dot5"/>
            <Panel class="dot6"/>
            <Panel class="dot7"/>
            <Panel class="dot8"/>
            <Panel class="dot9"/>
            <Panel class="dot10"/>
            <Panel class="dot11"/>
            <Panel class="dot12"/>
        </Panel>
        <Panel id="HeroControls">
            <Panel class="HeroControlsButtons">
                <Panel class="WindowButton HeroControlsButton">
                    <Label text="#DOTA_HeroSelection_CreateHero" />
                </Panel>
                <Panel class="WindowButton HeroControlsButton" onactivate="RemoveStyle( SaveSlotsWindow, Hidden)">
                    <Label text="#DOTA_HeroSelection_LoadHero" />
                </Panel>
            </Panel>
        </Panel>
        <Panel id="SaveSlotsWindow" class="Hidden">
            <Image class="WindowCloseIcon" src="file://{images}/custom_game/hud/close_button.png" scaling="stretch-to-fit-preserve-aspect" onactivate="AddStyle( SaveSlotsWindow, Hidden)"/>
            <Label class="SaveSlotsTitleLabel" text="#DOTA_HeroSelection_SaveLoadTitle" />
        </Panel>
        <Panel id="AvailableHeroesContainer">
            <Panel id="AvailableHeroes" />
        </Panel>
    </Panel>
</root>