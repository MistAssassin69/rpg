<root>
    <styles>
        <include src="file://{resources}/styles/windows/basic_window.css"/>
        <include src="file://{resources}/styles/windows/heroselection_window.css"/>
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/windows/heroselection_setup.js"/>
    </scripts>
    <Panel class="Root" hittest="true">
        <Panel class="HeroSelectionSetup">
            <Panel class="PlayerHeroes">
                <Panel class="HeroContainer">
                    <Panel id="HeroColor0" class="HeroColor" />
                    <DOTAHeroImage id="HeroIcon0" heroname="npc_dota_hero_nevermore " class="HeroIcon" scaling="stretch-to-fit-preserve-aspect" />
                    <Label id="HeroName0" class="HeroPlayerName" text="Player Name" />
                </Panel>
                <Panel class="HeroContainer">
                    <Panel id="HeroColor1" class="HeroColor" />
                    <DOTAHeroImage id="HeroIcon1" heroname="" class="HeroIcon" scaling="stretch-to-fit-preserve-aspect" />
                    <Label id="HeroName1" class="HeroPlayerName" text="Player Name" />
                </Panel>
                <Panel class="HeroContainer">
                    <Panel id="HeroColor2" class="HeroColor" />
                    <DOTAHeroImage id="HeroIcon2" heroname="" class="HeroIcon" scaling="stretch-to-fit-preserve-aspect" />
                    <Label id="HeroName2" class="HeroPlayerName" text="Player Name" />
                </Panel>
                <Panel class="HeroContainer">
                    <Panel id="HeroColor3" class="HeroColor" />
                    <DOTAHeroImage id="HeroIcon3" heroname="" class="HeroIcon" scaling="stretch-to-fit-preserve-aspect" />
                    <Label id="HeroName3" class="HeroPlayerName" text="Player Name" />
                </Panel>
                <Panel class="HeroContainer">
                    <Panel id="HeroColor4" class="HeroColor" />
                    <DOTAHeroImage id="HeroIcon4" heroname="" class="HeroIcon" scaling="stretch-to-fit-preserve-aspect" />
                    <Label id="HeroName4" class="HeroPlayerName" text="Very Long Player Name" />
                </Panel>
            </Panel>
            <Label id="TimerLabel" text="#custom_game_team_select_timer"/>
        </Panel>
        <Panel class="lds-default">
            <Panel class="dot1"/>
            <Panel class="dot2"/>
            <Panel class="dot3"/>
            <Panel class="dot4"/>
            <Panel class="dot5"/>
            <Panel class="dot6"/>
            <Panel class="dot7"/>
            <Panel class="dot8"/>
            <Panel class="dot9"/>
            <Panel class="dot10"/>
            <Panel class="dot11"/>
            <Panel class="dot12"/>
        </Panel>
    </Panel>
</root>