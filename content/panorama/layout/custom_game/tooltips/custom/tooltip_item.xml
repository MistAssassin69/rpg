<root>
    <styles>
        <include src="file://{resources}/styles/tooltips/custom/tooltip_item.css"/>
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/api/tooltip_manager.js"/>
    </scripts>
    <Panel style="visibility: collapse;" class="ItemTooltip" hittest="false" hittestchildren="false">
        <Panel id="ItemTooltipHeader" class="ItemTooltipHeader">
            <Panel>
                <DOTAItemImage id="ItemTooltipImage" class="ItemTooltipImage" showtooltip="false" hittest="false"
                               scaling="stretch-to-fit-preserve-aspect" itemname="item_third_eye"/>
            </Panel>
            <Panel class="ItemTooltipName">
                <Label id="ItemTooltipNameLabel" html="true" class="ItemTooltipNameLabel" text="Item name"/>
            </Panel>
        </Panel>
        <Panel class="ItemTooltipDescription">
            <Panel class="ItemTooltipInfoContainer">
                <Label id="ItemTooltipRarityLabel" html="true" class="ItemTooltipRarityLabel" text="Item rarity"/>
                <Label id="ItemTooltipTypeLabel" html="true" class="ItemTooltipTypeLabel" text="Item type"/>
            </Panel>
            <Label id="ItemTooltipQualityLabel" class="ItemTooltipQualityLabel" html="true" text="Quality: 0%"/>
            <Panel id="ItemTooltipStatsContainer" class="ItemTooltipStatsContainer"/>
            <Label id="ItemTooltipLabel" class="ItemTooltipLabel" html="true" text="Item description"/>
        </Panel>
    </Panel>
</root>